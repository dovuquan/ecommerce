<tr class="nested-fields">
  <td>
    <%= f.file_field :name %>
    <%= f.hidden_field :name_cache, value: f.object.name_cache %>
  </td>
  <td class="thumb">
    <% if f.object.name.present? %>
      <%= image_tag f.object.name.first.url %>
    <% end %>
  </td>
  <td>
    <%= link_to_remove_association (t "remove"), f %>
  </td>
</tr>
